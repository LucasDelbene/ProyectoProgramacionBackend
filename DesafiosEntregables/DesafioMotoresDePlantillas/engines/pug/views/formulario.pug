doctype
html(lang='en')
    head
        meta(charset='utf-8')
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
        title='DESAFIO ENTREGABLE - MOTORES DE PLANTILLAS'
    body(class='bg-dark')
        div(class='container mt-3')
            div(class='jumbotron bg-dark')
                h1(class='text-light text-center') INGRESE LOS DATOS DEL PRODUCTO
                br
                form(action="/productos" method='post')
                    div(class='form-group')
                        label(for="id")
                            b(class='text-light') ID
                        input(type="number" id='id' class='form-control bg-dark text-light' name='id' required)
                    div(class='form-group')
                        label(for="nombre")
                            b(class='text-light') NOMBRE
                        input(type="text" id='nombre' class='form-control bg-dark text-light' name='nombre' required)
                    div(class='form-group')
                        label(for="precio")
                            b(class='text-light') PRECIO
                        input(type="number" id='precio' class='form-control bg-dark text-light' name='precio' required)
                    div(class='form-group')
                        label(for="imagen")
                            b(class='text-light') IMAGEN
                        input(type="text" id='imagen' class='form-control bg-dark text-light' name='imagen' required)
                    div(class='d-flex justify-content-center')
                        button(class='btn btn-outline-light mt-3 mb-5') ENVIAR
            a(href="./productos")
                button(class='btn btn-outline-light') IR A LA LISTA DE PRODUCTOS
